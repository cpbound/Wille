<div class="container mt-3">
  <div class="card-contents funeral-margin">
    <p> <i class="bi bi-journal-text"></i> <%= Funeral::QUESTIONS[:ten_words] %> <i class="bi bi-journal-text"></i> </p>
    <%= simple_form_for(@funeral, :url => wizard_path, :method => :put) do |f| %>
      <%= f.input :tag_list,
                value_method: :name,
                 legend_tag: false,
                  as: :check_boxes,
                  collection: ActsAsTaggableOn::Tag.all.sort,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
      <%= f.submit 'Next', :class => 'btn btn-primary' %>
      <% if @funeral.ten_words.present? %>
        <%= link_to 'Finish', wills_path, class: 'btn btn-success' %>
      <% end %>
    <% end %>
  </div>
  <div class="flash flash-success alert alert-dismissible fade show" role="alert">
    <span><strong>➡️</strong> An easy question to start with! 💭 What words best describe you? Pick however many you like!</span>
    <a data-bs-dismiss="alert" aria-label="Close">
      <i class="fas fa-times"></i>
    </a>
  </div>
</div>
