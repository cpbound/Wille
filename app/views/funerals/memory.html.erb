<div class="container">
  <div class="card-container">
    <div class="card-contents">
      <p> <i class="bi bi-memory"></i> <%= Funeral::QUESTIONS[:memory] %> <i class="bi bi-memory"></i> </p>
      <%= simple_form_for(@funeral, :url => wizard_path, :method => :put) do |f| %>
        <%= f.text_field :memory, placeholder: 'Write description!', class: 'mb-3 p-2' %>
        <%= f.input :photo, as: :file, label: false, class: 'mb-3 p-2 w-50' %>
        <%= f.submit 'Next', :class => 'btn btn-primary' %>
        <% if @funeral.memory.present? %>
          <%= link_to 'Finish', wills_path, class: 'btn btn-primary' %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="flash flash-success alert alert-dismissible fade show" role="alert">
    <span><strong>➡️</strong> Let's think a little harder! 💭 One thing you'd never want to forget. If you've got a picture of it, even better!</span>
    <a data-bs-dismiss="alert" aria-label="Close">
      <i class="fas fa-times"></i>
    </a>
  </div>
</div>
