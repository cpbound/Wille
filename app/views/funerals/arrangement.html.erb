    <div class="card-contents">
      <p><i class="bi bi-person-rolodex"></i> <%= Funeral::QUESTIONS[:arrangement] %> <i class="bi bi-person-rolodex"></i></p>
      <%= form_for(@funeral, :url => wizard_path, :method => :put) do |f| %>
