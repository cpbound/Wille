<div class="container d-flex flex-column align-items-center justify-content-evenly will-card-frame" data-controller="make-pdf">
  <h1 class="my-4">Your Will</h1>
  <div class="card w-75" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px; margin-right: 0px;">
    <div class="card-body" id="will-card" data-make-pdf-target="printText">
      <%= render "text" %>
    </div>
  </div>
  <div class="btn-container d-flex justify-content-between mt-3">
    <button class="btn btn-primary mb-3" data-action="click->make-pdf#make_pdf">Make a PDF
    </button>
    <%= link_to "Will Dashboard", wills_path, class:"btn btn-primary mb-3 ms-3" %>
  </div>
  <%= form_tag invite_will_path(@will), class:'d-flex w-50', method: :post do %>
    <%= text_field_tag :email,
    params[:email],
    class: "form-control w-75",
    placeholder: "Enter email:"
    %>
    <%= submit_tag "Invite", class: "btn btn-primary w-25" %>
  <% end %>
</div>
